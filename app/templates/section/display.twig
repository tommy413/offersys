<section id="display" class="container content-section text-center">
    <div class="row">
        <div class="col-lg-6" align="center">
            <h2>Scoreboard <i class="fa fa-edit"></i></a></h2>
            <table class="table">
                <thead align="center">
                    <tr>
                        <th>Teamname</th>
                        <th>Money</th>
                        <th>Productivity</th>
                    </tr>
                </thead>
                <tbody>
                    {% for record in teamstatus %}
                        <tr>
                            <td>{{ record.TeamName }}</td>
                            <td>{{ record.MoneyCount }}</td>
                            <td>{{ record.Productivity }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</section>