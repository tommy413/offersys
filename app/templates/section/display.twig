<section id="display" class="container content-section text-center">
    <div class="row">
        <div class="col-lg-6" align="center">
            <h2>Scoreboard <a href="#" data-toggle="modal" data-target="#modal-punch"><i class="fa fa-edit"></i></a></h2>
            <table class="table">
                <thead align="center">
                    <tr>
                        <th>Teamname</th>
                        <th>Money</th>
                        <th>Produtivity</th>
                    </tr>
                </thead>
                <tbody>
                    {% for record in records %}
                        <tr>
                            <td>{{ record.teamname }}</td>
                            <td>{{ record.money }}</td>
                            <td>{{ record.produtivity }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</section>