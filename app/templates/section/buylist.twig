<section id="list" class="container content-section text-center">
    <div class="row" align="center">
        <div class="col-lg-6" align="center">
            <h2>Materials PriceList <i class="fa fa-edit"></i></h2>
            <form action="/offersys/test/public/updatebuy" method="post">
            <table class="table">
                <thead align="center">
                    <tr>
                        <th>Name</th>
                        <th>Price1</th>
                        <th>Price2</th>
                        <th>Price3</th>
                        <th>Price4</th>
                        <th>Price5</th>
                        <th>Inventory</th>
                        <th>Ordered</th>
                        <th>New Order</th>
                    </tr>
                </thead>
                <tbody>
                    {% for record in buyrecords %}
                        <tr>
                            <td>{{ record.ProductName }}</td>
                            <td>{% if record.Last==1 %}*{% endif %}{{ record.Price1 }}</td>
                            <td>{% if record.Last==2 %}*{% endif %}{{ record.Price2 }}</td>
                            <td>{% if record.Last==3 %}*{% endif %}{{ record.Price3 }}</td>
                            <td>{% if record.Last==4 %}*{% endif %}{{ record.Price4 }}</td>
                            <td>{% if record.Last==5 %}*{% endif %}{{ record.Price5 }}</td>
                            <td>{{ record.inventory }}</td>
                            <td>{{ record.ordered }}</td>
                            <td><input type="text" name="buy[]" class="form-control" placeholder="0"></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <input class="btn btn-default" value="Buy!" type="submit"/>
            </form>
        </div>
    </div>
</section>