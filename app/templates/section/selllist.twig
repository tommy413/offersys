<section id="list" class="container content-section text-center">
    <div class="row" align="center">
        <div class="col-lg-6" align="center">
            <h2>Products PriceList <i class="fa fa-edit"></i></h2>
            <form action="/offersys/test/public/updatesell" method="post">
            <div class="table-responsive">
            <table class="table">
                <thead align="center">
                    <tr>
                        <th>Name</th>
                        <th>0~{{ sellinterval }}</th>
                        <th>{{ sellinterval }}~{{ sellinterval*2 }}</th>
                        <th>{{ sellinterval*2 }}~{{ sellinterval*3 }}</th>
                        <th>{{ sellinterval*3 }}~{{ sellinterval*4 }}</th>
                        <th>{{ sellinterval*4 }}up</th>
                        <th>Inventory</th>
                        <th>Ordered</th>
                        <th>New Order</th>
                    </tr>
                </thead>
                <tbody>
                    {% for record in sellrecords %}
                        <tr>
                            <td>{{ record.GoodsName }}</td>
                            <td>{% if record.Last==1 %}*{% endif %}{{ record.Price1 }}</td>
                            <td>{% if record.Last==2 %}*{% endif %}{{ record.Price2 }}</td>
                            <td>{% if record.Last==3 %}*{% endif %}{{ record.Price3 }}</td>
                            <td>{% if record.Last==4 %}*{% endif %}{{ record.Price4 }}</td>
                            <td>{% if record.Last==5 %}*{% endif %}{{ record.Price5 }}</td>
                            <td>{{ record.inventory }}</td>
                            <td>{{ record.ordered }}</td>
                            <td><input type="text" name="sell[]" class="form-control" placeholder="0"></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            </div>
            <input class="btn btn-default" value="Sell!" type="submit"/>
            </form>
        </div>
    </div>
</section>